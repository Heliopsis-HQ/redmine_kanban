  <div class="staff">
    <div id="user" class="staffed-column pane">
      <%= h user.name %>
    </div>
    <div id="active" class="staffed-column pane">
      <ol id="active-issues-user-<%= h user.id -%>">
        <% if @kanban.active_issues[user].empty? %>
        <%= render :partial => 'empty_issue' %>
        <% else %>
        <%= render(:partial => 'issue', :collection => @kanban.active_issues[user].collect(&:issue)) %>
        <% end %>
      </ol>
    </div>
